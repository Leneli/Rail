//- default vars
- var testBodyStyle = "width: 90%; margin: auto;";

//- include
include ./common/switch
include ./common/icon-svg

block variables

doctype html
html
	head
		meta(charset="utf-8")
		title #{title}
		meta(content="" name="author")
		meta(content="" name="description")
		meta(content="" name="keywords")
		meta(content="width=device-width, initial-scale=1" name="viewport")
		meta(content="ie=edge" http-equiv="x-ua-compatible")

		//- favicon block start
		//- favicon block end

		link(rel="stylesheet" href="/assets/css/foundation.css")
		link(rel="stylesheet" href="/assets/css/app.css")
		script(src="/assets/js/foundation.js" defer)
		script(src="/assets/js/app.js" defer)

		<!--[if lt IE 9]>
		script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
		<![endif]-->

	body(style=`${testBodyStyle}`)

	block popups

		.trains-header
			div
				h2.text_dark Select train
				.scale
					.scale__item.done(data-step="1")
					.scale__item.activ(data-step="2")
					.scale__item(data-step="3")
					.scale__item(data-step="4")
					.scale__item(data-step="5")
			div
				.sign-in-up.text-right
					a(href="#") Sign in
					span  
					a(href="#") Sign up
				div
					| Information service 
					input.button_green_circle(type="button", value="?")

		
		block content


		.trains-footer
			div
				input.button_set3_red(type="button", value="CLEAR")
				input.button_set3_green(type="button", value="save")
				input.button_set3_gray(type="button", value="RESTORE")
			div
				input.button_set3_gray(type="button", value="BACK")
				input.button_set3_green(type="button", value="NEXT")

		div(style="margin: 50px 0 10px 0; padding: 15px; border: 2px solid #ccc; text-align: center;")
			a(href="/") Step 1 - Widget
			span  | 
			a(href="/warning-personal.html") Step 1 - Warning: Personal info
			span  | 
			a(href="/warning-notice.html") Step 1 - Warning: Notice
			span  | 
			a(href="/schedule.html") Step 2 - Schedule
			span  | 
			a(href="/select.html") Step 2 - Select train
			span  | 
			a(href="/details.html") Step 2 - Details popup